<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.beni.diceolympics.ChooseGame">

    <ImageButton
        android:id="@+id/chooseGame_btn_mute"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/unmute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageLanding"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/diceolympicgame_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/chooseGame"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <Button
            android:id="@+id/chooseGame_btn_playPigDice"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/PlayPigDice"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <Button
            android:id="@+id/chooseGame_btn_playMidnight"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg_round"
            android:text="@string/PlayMidnight"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>
