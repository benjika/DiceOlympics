<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.beni.diceolympics.InputNames">


    <TextView
        android:id="@+id/EnterPlayersNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/EnterPlayersNames"
        android:textColor="@color/colorAccent"
        android:textSize="37sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PlayerOneHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/PlayerOneHeadline"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PlayerOneInput"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:hint="@string/PlayerOneHint"
        android:textColorHint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/PlayerTwoHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/PlayerTwoHeadline"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PlayerTwoInput"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        android:hint="@string/PlayerTwoHint"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnStartEnterNames"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:text="@string/chooseGame"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

</LinearLayout>
