<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageButton
        android:id="@+id/Yatzee_End_Game_Champ_mute"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/MuteUnMuteButton"
        android:src="@drawable/unmute" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Your_Score"
        android:layout_below="@id/Yatzee_End_Game_Champ_mute"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:gravity="center"
        android:id="@+id/Your_Final_Score_Heading"
        />

    <View
        android:layout_height="2dip"
        android:layout_width="match_parent"
        android:background="#FF0000"
        android:layout_below="@id/Your_Final_Score_Heading"
        android:layout_margin="10sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Enter_New_Champ_Name"
        android:layout_marginTop="25sp"
        android:padding="2sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_below="@id/Your_Final_Score_Heading"
        android:textSize="50sp"
        android:id="@+id/Enter_New_Champ_Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/withscore"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_below="@id/Enter_New_Champ_Name"
        android:textSize="50sp"
        android:id="@+id/WithScore"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WithScore"
        android:text="Score"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textSize="50sp"
        android:id="@+id/TopPlayerScore"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Your_the_best"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/TopPlayerScore"
        android:id="@+id/BEST"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:layout_below="@id/BEST"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <Button
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:background="@drawable/button_bg_round"
            android:text="@string/Back"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/Yatzee_End_Game_Top_Player_Back"/>
        
        <Button
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_marginStart="5sp"
            android:background="@drawable/button_bg_round"
            android:text="@string/Save"
            android:textColor="@color/colorAccent"
            android:id="@+id/Save_Best_Score_Name"/>
        
    </LinearLayout>

   

</RelativeLayout>