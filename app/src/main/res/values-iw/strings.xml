    <!--Midnight instructions-->
    <string name="Midnight_Goal1H">מטרה</string>
    <string name="Midnight_Goal2">עם 6 קוביות, תשיג 1 ו-4 עם שתי קוביות ותשיג כמה שיותר נקודות עם שאר ה-4 קוביות. ניקוד מקסימלי-24.</string>
    <string name="Midnight_Gameplay1H">שלבי המשחק</string>
    <string name="Midnight_Gameplay2">נדרשות 6 קוביות. להיות ראשון הוא חסרון אז מתחיל מי שמקבל פחות בקוביה.</string>
    <string name="Midnight_Gameplay3">השחקן מתחיל בהטלה כל 6 הקוביות. לאחר כל הטלה עליו לשמור לפחות אחת ולגלגל שוב את השאר. ברגע שקוביה נשמרת, לא ניטל להטיל אותה שוב. התור נגמר כאשר אין יותר קוביות להטיל.</string>
    <string name="Midnight_Gameplay4">שחקן חייב שבסוף התור יהיה לו 1 וגם 4, אחרת הניקוד בסיבוב זה לא נספר. הניקוד נספר בשאר 4 הקוביות. ניקוד מקסימלי הוא 24.</string>
    <string name="Midnight_Gameplay5">המנצח הוא השחקן עם הניקוד הגבוה ביותר.</string>
    <string name="Midnight_ScoringExamples1H">דוגמאות</string>
    <string name="Midnight_ScoringExamples2">דוגמא 1: לסיוון בסוף התור יש (6, 6, 6, 4, 5, 1). בגלל שיש לה גם 1 וגם 4, סיוון מקבלת 23 נקודות. (6+ 6+ 6+ 5= 23)</string>
    <string name="Midnight_ScoringExamples3">דוגמא 2: ליוני בסוף התור יש (6, 6, 6, 4, 5, 4). בגלל שאין לו 4 (רק 1), יוני מרוויח 0 נקודות.</string>
    <string name="Midnight_ScoringExamples4">דוגמא 3: לרון בסוף התור יש (6, 6, 6, 1, 5, 3). בגלל שאין לו 4 (רק 1), רון מקבל 0 נקודות.</string>


