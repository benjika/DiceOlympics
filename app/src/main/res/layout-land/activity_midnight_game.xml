<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beni.diceolympics.MidnightGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/midnight_playerOneField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/midnight_playerName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:hint="player one"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/midnight_scoreTagPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/midnight_playerName1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:text="@string/Score"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/midnight_scorePlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/midnight_scoreTagPlayer1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/midnight_playerTwoField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/midnight_playerName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:hint="player two"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/midnight_scoreTagPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/midnight_playerName2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:text="@string/Score"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/midnight_scorePlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/midnight_scoreTagPlayer2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="35sp" />


        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/midnight_turnArrow"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:scaleType="fitXY"
        android:src="@drawable/playerturnarrow" />

    <Button
        android:id="@+id/btn_midnight_diceRollMidnight"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_below="@+id/midnight_turnArrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_bg_round"
        android:text="@string/RollDice"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_midnight_endTurn"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_below="@id/midnight_turnArrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_bg_round"
        android:text="@string/endTurn"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/midnight_setOfDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_midnight_diceRollMidnight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/midnight_diceFirst_unChosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceone" />

        <ImageButton
            android:id="@+id/midnight_diceSecond_unChosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceone" />

        <ImageButton
            android:id="@+id/midnight_diceThird_unChosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceone" />

        <ImageButton
            android:id="@+id/midnight_diceFourth_unChosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceone" />

        <ImageButton
            android:id="@+id/midnight_diceFifth_unChosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceone" />

        <ImageButton
            android:id="@+id/midnight_diceSixth_unChosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midnight_setOfDice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/midnight_diceFirst_chosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginEnd="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceempty" />

        <ImageButton
            android:id="@+id/midnight_diceSecond_chosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceempty" />

        <ImageButton
            android:id="@+id/midnight_diceThird_chosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceempty" />

        <ImageButton
            android:id="@+id/midnight_diceFourth_chosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceempty" />

        <ImageButton
            android:id="@+id/midnight_diceFifth_chosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceempty" />

        <ImageButton
            android:id="@+id/midnight_diceSixth_chosen"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:scaleType="fitXY"
            android:src="@drawable/diceempty" />

    </LinearLayout>


</RelativeLayout>
